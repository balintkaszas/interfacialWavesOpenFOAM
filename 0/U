FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    leftWall
    {
        type            noSlip;
    }
    rightWall
    {
        type            noSlip;
    }
    lowerWall
    {
        type            noSlip;
    }
    atmosphere
    {
        type            groovyBC;
        valueExpression "vector(0, -A*sin(k*pos().x)*sin(time()*w),0)";
       variables       "l=2.26;A=1.;k=2*pi/l;w=2*pi/6.;";
       timelines       ();
    }
    defaultFaces
    {
        type            empty;
    }
}


// ************************************************************************* //
